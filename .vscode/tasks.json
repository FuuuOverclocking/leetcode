{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Current Cpp",
            "type": "process",
            "command": "clang++",
            "args": [
                "${file}",
                "-g",
                "-o",
                "${workspaceFolder}/target/cpp/${fileBasenameNoExtension}.out", // 输出到build文件夹下
                "-Wall",
                "-O0",
                "-std=c++20",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ]
}